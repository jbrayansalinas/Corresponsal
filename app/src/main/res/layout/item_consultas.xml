<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/btn_transparente">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <EditText
            android:id="@+id/campoUno"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/transparente"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/campoDos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/campoUno"
            android:layout_marginTop="5dp"
            android:background="@drawable/transparente"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/campoTres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/campoDos"
            android:layout_marginTop="5dp"
            android:background="@drawable/transparente"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/campoCuatro"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/campoTres"
            android:layout_marginTop="5dp"
            android:background="@drawable/transparente"
            android:textColor="#000000" />
    </RelativeLayout>

    <EditText
        android:id="@+id/campoOtro"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="96dp"
        android:background="@drawable/btn_azul"
        android:gravity="end"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />



</RelativeLayout>