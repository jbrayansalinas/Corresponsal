<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/bolitas_azules" />

    <TextView
        android:id="@+id/nombreCorresponsalDos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/bolita_azul"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/saldoCorresponsalDos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombreCorresponsalDos"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/bolita_azul"
        android:textSize="20sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/ic_money"
        app:drawableTint="@color/transparente"/>

    <TextView
        android:id="@+id/cuentaCorresponsalDos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saldoCorresponsalDos"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/bolita_azul"
        android:textSize="20sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/ic_numeral"
        app:drawableTint="@color/transparente"  />

    <ImageView
        android:id="@+id/atras_Dos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:longClickable="true"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/tituloDos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="137dp"
        android:text="@string/texto"
        android:textAlignment="center"
        android:textColor="@color/titulo"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/lineaDos"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/tituloDos"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="5dp"
        android:background="@color/bolita_azul" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/primerCampoDos2"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:textColor="@color/txt_normal"
        android:textColorHint="@color/txt_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/primerCampoDos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/txt_login"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/segundoCampoDos2"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/primerCampoDos2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        app:startIconDrawable="@drawable/ic_money"
        app:startIconTint="@color/bolita_azul"
        android:textColor="@color/txt_normal"
        android:textColorHint="@color/txt_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/segundoCampoDos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/txt_login"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btncancelarDos"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="146dp"
        android:layout_height="35dp"
        android:layout_below="@+id/segundoCampoDos2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_transparente"
        android:text="@string/cancelar"
        android:textAlignment="center"
        android:textColor="@color/bolita_azul"
        android:textSize="14sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnconfirmarDos"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="146dp"
        android:layout_height="35dp"
        android:layout_below="@+id/segundoCampoDos2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/btn_azul"
        android:text="@string/confirmar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <include
        android:id="@+id/alertaDos"
        layout="@layout/alert_mensaje"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>