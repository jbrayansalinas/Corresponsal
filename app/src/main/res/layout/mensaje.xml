<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/bolitas_rojas"
        android:id="@+id/bolitas_rojasMensaje"/>
    <include layout="@layout/bolitas_azules"
        android:id="@+id/bolitas_azulesMensaje"/>

    <TextView
        android:id="@+id/tituloMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="137dp"
        android:text="@string/texto"
        android:textAlignment="center"
        android:textColor="#808080"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgMensaje"
        android:layout_width="313dp"
        android:layout_height="182dp"
        android:layout_below="@+id/tituloMensaje"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="45dp"
        app:srcCompat="@android:drawable/editbox_dropdown_light_frame" />

    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@color/white"
        android:id="@+id/btnsalirMensaje"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_below="@+id/imgMensaje"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="150dp"
        android:background="@drawable/btn_azul"
        android:padding="3dp"
        android:text="@string/salir"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold" />
</RelativeLayout>