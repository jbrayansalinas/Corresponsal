<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/bolitas_rojas"
        android:id="@+id/bolitas_rojasUno"/>
    <include layout="@layout/bolitas_azules"
        android:id="@+id/bolitas_azulesUno"/>

    <TextView
        android:id="@+id/nombreCorresponsalUno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/bolita_azul"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/saldoCorresponsalUno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombreCorresponsalUno"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/bolita_azul"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cuentaCorresponsalUno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saldoCorresponsalUno"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/bolita_azul"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/atras_Uno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:longClickable="true"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/tituloUno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="137dp"
        android:text="@string/texto"
        android:textAlignment="center"
        android:textColor="@color/titulo"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/lineaUno"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/tituloUno"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="5dp"
        android:background="@color/bolita_azul" />

    <EditText
        android:id="@+id/primerCampoUno"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tituloUno"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/txt_login"
        android:ems="10"
        android:inputType="number"
        android:padding="7dp"
        android:textAlignment="center"
        android:textColor="@color/txt_normal"
        android:textColorHint="@color/txt_hint" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btncancelarUno"
        android:layout_width="146dp"
        android:layout_height="35dp"
        android:layout_below="@+id/primerCampoUno"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/btn_transparente"
        android:text="@string/cancelar"
        android:textAlignment="center"
        android:textColor="@color/bolita_azul"
        android:textSize="14sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnconfirmarUno"
        android:layout_width="146dp"
        android:layout_height="35dp"
        android:layout_below="@+id/primerCampoUno"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/btn_azul"
        android:text="@string/confirmar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />
</RelativeLayout>