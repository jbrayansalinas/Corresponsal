<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/bolitas_azulessConsultarCleinte"
        layout="@layout/bolitas_azules" />

    <include
        android:id="@+id/bolitas_rojasConsultarCleinte"
        layout="@layout/bolitas_rojas" />


    <TextView
        android:id="@+id/tituloConsultarCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="98dp"
        android:text="@string/consultarcliente"
        android:textAlignment="center"
        android:textColor="@color/titulo"
        android:textSize="25sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/lineaConsultarCliente"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/tituloConsultarCliente"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="5dp"
        android:background="@color/bolita_roja" />

    <ImageView
        android:id="@+id/atras_ConsultarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:longClickable="true"
        app:srcCompat="@drawable/ic_back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/fondotarjeta"
        android:padding="15dp"
        android:id="@+id/relativeCard">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/chip" />

        <TextView
            android:id="@+id/marcaTarjetaModelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/fondo_alert"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/numeroTarjetaModelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/fondo_alert"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/txtcvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numeroTarjetaModelo"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="@string/cvv"
            android:textColor="@color/fondo_alert"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/cvvTarjetaModelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numeroTarjetaModelo"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/txtcvv"
            android:textColor="@color/fondo_alert"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txtdate"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numeroTarjetaModelo"
            android:layout_alignParentStart="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="5dp"
            android:text="@string/fecha"
            android:textAlignment="textEnd"
            android:textColor="@color/fondo_alert"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/fechaTarjetaModelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numeroTarjetaModelo"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/txtdate"
            android:textColor="@color/fondo_alert"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/nombreClienteModelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numeroTarjetaModelo"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/fondo_alert"
            android:textSize="17dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/texto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeCard"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:text="@string/saldo"
        android:textAlignment="viewStart"
        android:textColor="@color/titulo"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pagoConsultarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeCard"
        android:layout_alignParentStart="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="36dp"
        android:textAlignment="viewStart"
        android:textColor="@color/txt_normal"
        android:textSize="20sp"
        android:textStyle="bold"
        app:drawableRightCompat="@drawable/ic_money_gris" />

    <View
        android:id="@+id/lineaSaldoConsultarCliente"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/pagoConsultarCliente"
        android:layout_marginStart="120dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="30dp"
        android:background="@color/bolita_roja" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConsultarCliente"
        android:layout_width="124dp"
        android:layout_height="36dp"
        android:layout_below="@+id/pagoConsultarCliente"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="146dp"
        android:background="@drawable/btn_rojo"
        android:text="@string/aceptar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>